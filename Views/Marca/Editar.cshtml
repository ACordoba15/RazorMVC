@using RazorMVC.Models
@model MarcaCLS
@{
    ViewBag.Title = "Editar Marcas";
}

<h2>Editar</h2>
<div class="row">
    <div class="col-md-6">
        @* Acción, controlador, método get o post*@
        @using (Html.BeginForm("Editar", "Marca", FormMethod.Post, new { @id = "frmEditar" }))
        {
            <div>
                @Html.LabelFor(p => p.idMarca)
                @* Se enlaza automáticamente con el modelo y lo que se pongo en el textbox se envía al modelo *@
                @Html.TextBoxFor(p => p.idMarca, new { @class = "form-control", @readOnly = true })
                @Html.ValidationMessage("idMarca", new { @class = "text-danger" })
            </div>

            <div>
                @Html.LabelFor(p => p.nombreMarca)
                @* Se enlaza automáticamente con el modelo y lo que se pongo en el textbox se envía al modelo *@
                @Html.TextBoxFor(p => p.nombreMarca, new { @class = "form-control" })
                @Html.ValidationMessage("nombreMarca", new { @class = "text-danger" })
                @if (Model != null && Model.mensajeError != null)
                {
                    @Html.Label(Model.mensajeError, new { @class = "text-danger" })
                }
            </div>

            <div>
                @Html.LabelFor(p => p.descripcionMarca)
                @Html.TextBoxFor(p => p.descripcionMarca, new { @class = "form-control" })
                @Html.ValidationMessage("descripcionMarca", new { @class = "text-danger" })
            </div>
            <br />

            <div style="margin: auto">
                <input type="submit" class="btn btn-primary" value="Guardar" />
                @Html.ActionLink("Volver", "Index", "Marca", null, new { @class = "btn btn-danger" })
            </div>
        }
    </div>
</div>


<script>
    var frmEditar = document.getElementById("frmEditar");
    frmEditar.onsubmit = function (e)
    {
        e.preventDefault();
        if (confirm("¿Deseas guardar los cambios?") == 1)
        {
            frmEditar.submit();        
        }
    }
</script>
